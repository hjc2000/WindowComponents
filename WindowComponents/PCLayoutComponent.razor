@inject IJSRuntime _jsrt

@*根节点占据全部视觉宽高，溢出隐藏*@
<div class="root">
	<div @ref="_left_menu_element" class="left-menu">
		@LeftMenu
	</div>
	<div class="top-bar">
		@TopBar
	</div>
	<div class="content">
		@Content
	</div>
	<div class="state-bar">
		@StateBar
	</div>
	<div class="hide-left-menu-button-box" @onclick="HideLeftMenu">
		@if (HideLeftMenuButton is null)
		{
			@*☰☱☲☳☴☵☶☷*@
			<button class="hide-left-menu-button">☰</button>
		}
		else
		{
			@HideLeftMenuButton
		}
	</div>
</div>
